<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{ABSOLUTE} [%thread] %level %logger - %message%newlineExtra Info: %property{testProperty}%newline%exception"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG"/>
        <levelMax value="FATAL"/>
      </filter>
    </appender>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="UnitTest.log"/>
      <encoding value="utf-8" />
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level - %message%newline%exception"/>
      </layout>
    </appender>
    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender" >
      <applicationName value="MSTools" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline%exception" />
      </layout>
    </appender>

    <!--The name of the Logger should not be changed.-->
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
    <logger name="FileLogger">
      <level value="DEBUG" />
      <appender-ref ref="LogFileAppender" />
    </logger>
    <logger name="EventLogLogger">
      <level value="WARN" />
      <appender-ref ref="EventLogAppender" />
    </logger>
  </log4net>
  
  <connectionStrings>
    <add name="TestModel"
				  connectionString="Data Source=.;Initial Catalog=TestModel;Integrated Security=True;MultipleActiveResultSets=True;"
				  providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>